<Page x:Class="lab3.Pages.TreePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="TreePage" Height="800" Width="800">

    <Page.Resources>
        <!-- Подключение внешнего файла стилей -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Utilities/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <!-- Правая часть -->
        <StackPanel Margin="10,20,0,0">
            <!-- Заголовок -->
            <TextBlock Text="Результаты тестирования"
                   Style="{StaticResource HeaderTextBlockStyle}"
                   Margin="0,0,0,20"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"/>

            <!-- TextBox для вывода результатов -->
            <TextBox Name="OutputTextBox"
                 Style="{StaticResource OutputTextBoxStyle}"
                 HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Page>
